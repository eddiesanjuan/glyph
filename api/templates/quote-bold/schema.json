{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://glyph.so/schemas/quote-bold.json",
  "title": "QuoteData",
  "description": "Data schema for the quote-bold template - high-impact modern design",
  "type": "object",
  "required": ["meta", "client", "lineItems", "totals", "branding"],
  "properties": {
    "meta": {
      "type": "object",
      "description": "Quote metadata",
      "required": ["quoteNumber", "date", "validUntil"],
      "properties": {
        "quoteNumber": {
          "type": "string",
          "description": "Unique quote identifier",
          "examples": ["Q-2024-001", "12345"]
        },
        "date": {
          "type": "string",
          "description": "Quote creation date",
          "examples": ["January 15, 2024", "2024-01-15"]
        },
        "validUntil": {
          "type": "string",
          "description": "Quote expiration date",
          "examples": ["February 15, 2024", "2024-02-15"]
        },
        "notes": {
          "type": "string",
          "description": "Additional notes or special instructions"
        },
        "terms": {
          "type": "string",
          "description": "Terms and conditions text"
        },
        "showSignature": {
          "type": "boolean",
          "description": "Whether to show signature lines",
          "default": false
        }
      }
    },
    "client": {
      "type": "object",
      "description": "Client/recipient information",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Client name (person or business)",
          "examples": ["John Smith", "Acme Corporation"]
        },
        "company": {
          "type": "string",
          "description": "Company name (if different from name)"
        },
        "address": {
          "type": "string",
          "description": "Client address (supports multi-line with \\n)"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Client email address"
        },
        "phone": {
          "type": "string",
          "description": "Client phone number"
        }
      }
    },
    "lineItems": {
      "type": "array",
      "description": "List of quoted items or services",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["description", "quantity", "unitPrice", "total"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Item or service description"
          },
          "details": {
            "type": "string",
            "description": "Additional details or specifications"
          },
          "quantity": {
            "type": ["number", "string"],
            "description": "Quantity (number or formatted string)",
            "examples": [1, 2.5, "10 hours"]
          },
          "unitPrice": {
            "type": ["number", "string"],
            "description": "Price per unit (number or formatted)",
            "examples": [100, "100.00", "1,500.00"]
          },
          "total": {
            "type": ["number", "string"],
            "description": "Line total (quantity * unitPrice)",
            "examples": [100, "100.00", "1,500.00"]
          }
        }
      }
    },
    "totals": {
      "type": "object",
      "description": "Quote totals and calculations",
      "required": ["subtotal", "total"],
      "properties": {
        "subtotal": {
          "type": ["number", "string"],
          "description": "Sum of all line items before adjustments"
        },
        "discount": {
          "type": ["number", "string"],
          "description": "Discount amount (optional)"
        },
        "discountPercent": {
          "type": "number",
          "description": "Discount percentage for display"
        },
        "tax": {
          "type": ["number", "string"],
          "description": "Tax amount (optional)"
        },
        "taxRate": {
          "type": "number",
          "description": "Tax rate percentage for display",
          "examples": [8.25, 10]
        },
        "total": {
          "type": ["number", "string"],
          "description": "Final total after all adjustments"
        }
      }
    },
    "branding": {
      "type": "object",
      "description": "Company branding information",
      "required": ["companyName"],
      "properties": {
        "logoUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL to company logo image"
        },
        "companyName": {
          "type": "string",
          "description": "Company name to display"
        },
        "companyAddress": {
          "type": "string",
          "description": "Company address (supports multi-line with \\n)"
        }
      }
    },
    "styles": {
      "type": "object",
      "description": "Optional style customizations",
      "properties": {
        "accentColor": {
          "type": "string",
          "description": "Primary accent color (CSS color value)",
          "default": "#3b82f6",
          "examples": ["#3b82f6", "#8b5cf6", "#10b981"]
        },
        "fontFamily": {
          "type": "string",
          "description": "Font family override"
        },
        "fontSize": {
          "type": "string",
          "description": "Base font size",
          "default": "11pt"
        }
      }
    }
  },
  "examples": [
    {
      "meta": {
        "quoteNumber": "Q-2024-042",
        "date": "January 18, 2024",
        "validUntil": "February 18, 2024",
        "notes": "This quote includes all materials and labor. Rush delivery available at 15% premium.",
        "terms": "50% deposit required to begin work. Balance due upon completion."
      },
      "client": {
        "name": "Sarah Chen",
        "company": "Horizon Ventures",
        "address": "500 Innovation Drive\nSuite 800\nAustin, TX 78701",
        "email": "sarah@horizonventures.com"
      },
      "lineItems": [
        {
          "description": "Brand Strategy Workshop",
          "quantity": 1,
          "unitPrice": "5,000.00",
          "total": "5,000.00"
        },
        {
          "description": "Visual Identity System",
          "quantity": 1,
          "unitPrice": "12,000.00",
          "total": "12,000.00"
        },
        {
          "description": "Brand Guidelines Document",
          "quantity": 1,
          "unitPrice": "3,000.00",
          "total": "3,000.00"
        }
      ],
      "totals": {
        "subtotal": "20,000.00",
        "discount": "1,000.00",
        "total": "19,000.00"
      },
      "branding": {
        "companyName": "BOLD STUDIO",
        "companyAddress": "123 Design District, Los Angeles CA"
      },
      "styles": {
        "accentColor": "#3b82f6"
      }
    }
  ]
}
