{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://glyph.you/schemas/report-cover.json",
  "title": "ReportCoverData",
  "description": "Data schema for the report-cover template",
  "type": "object",
  "required": ["report"],
  "properties": {
    "report": {
      "type": "object",
      "required": ["title", "author", "date", "organization"],
      "properties": {
        "title": { "type": "string", "description": "Report title" },
        "subtitle": { "type": "string", "description": "Report subtitle or tagline" },
        "author": { "type": "string", "description": "Author name" },
        "date": { "type": "string", "description": "Publication date" },
        "organization": { "type": "string", "description": "Organization or department name" },
        "version": { "type": "string", "description": "Document version" },
        "classification": { "type": "string", "description": "Document classification level" },
        "abstract": { "type": "string", "description": "Summary or abstract text" }
      }
    },
    "styles": {
      "type": "object",
      "properties": {
        "accentColor": { "type": "string", "default": "#1e293b" }
      }
    }
  },
  "examples": [
    {
      "report": {
        "title": "Q4 2024 Market Analysis",
        "subtitle": "Trends, Opportunities, and Strategic Recommendations",
        "author": "Dr. Emily Rodriguez",
        "date": "January 15, 2024",
        "organization": "Meridian Research Group",
        "version": "2.1",
        "classification": "Internal",
        "abstract": "This report examines key market trends observed during Q4 2024, with particular focus on the enterprise SaaS segment. Our analysis covers pricing dynamics, competitive movements, and emerging opportunities in adjacent markets.\n\nFindings indicate a 12% acceleration in mid-market adoption, driven primarily by AI-augmented workflows and consolidated platform strategies."
      },
      "styles": {
        "accentColor": "#1e293b"
      }
    }
  ]
}
