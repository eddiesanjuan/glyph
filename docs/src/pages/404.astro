---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
---

<StarlightPage frontmatter={{ title: 'Page not found', template: 'splash' }}>
  <div class="not-found">
    <p class="not-found-code">404</p>
    <p class="not-found-message">
      The page you are looking for does not exist or has been moved.
    </p>

    <nav class="not-found-links">
      <h2>Try one of these instead</h2>
      <ul>
        <li><a href="/getting-started/quickstart/">Quick Start</a> -- Get up and running with Glyph</li>
        <li><a href="/api/overview/">API Overview</a> -- Explore the REST API reference</li>
        <li><a href="/integrations/mcp-server/">MCP Server</a> -- Claude Code integration</li>
        <li><a href="/sdk/overview/">SDK Reference</a> -- Web component documentation</li>
      </ul>
    </nav>

    <p class="not-found-home">
      <a href="/">Back to documentation home</a>
    </p>
  </div>
</StarlightPage>

<style>
  .not-found {
    text-align: center;
    max-width: 36rem;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .not-found-code {
    font-size: 4rem;
    font-weight: 700;
    color: var(--sl-color-accent);
    margin: 0;
    line-height: 1;
  }

  .not-found-message {
    font-size: 1.125rem;
    color: var(--sl-color-gray-2);
    margin: 1rem 0 2.5rem;
  }

  .not-found-links {
    text-align: left;
    background: var(--sl-color-gray-6);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    padding: 1.25rem 1.5rem;
  }

  .not-found-links h2 {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.75rem;
    color: var(--sl-color-white);
  }

  .not-found-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .not-found-links li {
    padding: 0.375rem 0;
    font-size: 0.9rem;
    color: var(--sl-color-gray-2);
  }

  .not-found-links a {
    color: var(--sl-color-accent-high);
    text-decoration: none;
    font-weight: 500;
  }

  .not-found-links a:hover {
    text-decoration: underline;
  }

  .not-found-home {
    margin-top: 2rem;
  }

  .not-found-home a {
    color: var(--sl-color-accent-high);
    text-decoration: none;
    font-weight: 500;
  }

  .not-found-home a:hover {
    text-decoration: underline;
  }
</style>
