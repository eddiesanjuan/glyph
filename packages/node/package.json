{
  "name": "@glyph-pdf/node",
  "version": "0.1.0",
  "description": "Generate PDFs with AI - Node.js SDK for the Glyph API. One function call to create professional PDFs from data or HTML.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node scripts/build-cjs.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "pdf",
    "pdf-generation",
    "ai",
    "ai-pdf",
    "glyph",
    "document-generation",
    "pdf-api",
    "typescript"
  ],
  "author": {
    "name": "Eddie San Juan",
    "email": "eddie@glyphpdf.com"
  },
  "license": "BUSL-1.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eddiesanjuan/glyph.git",
    "directory": "packages/node"
  },
  "homepage": "https://glyph.you",
  "bugs": {
    "url": "https://github.com/eddiesanjuan/glyph/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
